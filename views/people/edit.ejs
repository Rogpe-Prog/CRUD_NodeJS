<% include ../partials/header.ejs %>

<h1>Nova Pessoa</h1>
<p><a href="/people">Voltar</a> </p>

<form method="post">
    <div class="form-group">
        <label for="name">Nome</label>
        <input type="text" class="form-group" id="name" name="name" placeholder="Digite seu nome" value="<%= pessoas.name %>">
    </div>
    <div class="form-group">
        <label for="role">Cargo</label>
        <input type="text" class="form-group" id="role" name="role" placeholder="Digite seu cargo" value="<%= pessoas.role %>">
    </div>
    <button type="submit" class="btn btn-default">Salvar</button>
</form>

<% include ../partials/footer.ejs %>